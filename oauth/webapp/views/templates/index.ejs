<article>
    <h2>Account</h2>

    <dl>
        <dt>Gebruikersnaam</dt>
        <dd class="username text"></dd>
        <dt>E-mail</dt>
        <dd class="email text"></dd>
    </dl>
    <a role="button" href="#" class="btn btn-sm btn-primary" data-toggle="modal"
        data-target="#modal-edit-user"><i class="fa fa-fw fa-edit"></i> Wijzigen</a>

    <div class="modal fade" id="modal-edit-user" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <form id="form-edit-user" method="post" class="modal-content" autocomplete="off">
                <input type="hidden" name="username" class="username value" value="">
                <div class="modal-header bg-primary text-light">
                    <h5 class="modal-title">Account wijzigen</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="fa fa-fw fa-chevron-up text-light"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-12">
                            <label for="email">E-mail</label>
                            <input type="email" id="email" name="email" class="form-control email value" value=""
                                required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-sm btn-info"><i data-enabled="fa-save" class="fa fa-fw fa-save"></i> Opslaan</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-fw fa-times-circle"></i> Niet opslaan</button>
                </div>
            </form>
        </div>
    </div>
</article>